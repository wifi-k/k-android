<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragment.HomeBindFragment">

    <include
        android:id="@+id/include5"
        layout="@layout/common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include5">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_f1f5ff_r8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:src="@mipmap/ic_home_sign_notice"
                    app:layout_constraintBottom_toBottomOf="@+id/marquee_notice"
                    app:layout_constraintTop_toTopOf="@+id/marquee_notice"
                    tools:layout_editor_absoluteX="28dp" />

                <cn.treebear.kwifimanager.widget.marquee.MarqueeTextView
                    android:id="@+id/marquee_notice"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    tools:layout_editor_absoluteY="255dp">

                </cn.treebear.kwifimanager.widget.marquee.MarqueeTextView>
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/online_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_home_join_wrapper"
                android:minHeight="200dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_network_speed">

                <TextView
                    android:id="@+id/tv_look_more"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="23dp"
                    android:background="@drawable/bg_h32_f5_r8"
                    android:gravity="center"
                    android:text="@string/look_all"
                    android:textColor="#7383A2"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_device_list" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_device_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@mipmap/bg_home_bind"
                android:paddingTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:civ_border_width="0.5dp"
                    app:civ_border_color="@android:color/white"
                    android:src="@mipmap/ic_home_sign_default_header"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_back_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/come_back_home"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />

                <TextView
                    android:id="@+id/tv_ap_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableEnd="@mipmap/ic_line_arrow_right_white"
                    android:drawablePadding="4dp"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="@+id/tv_back_home"
                    app:layout_constraintTop_toBottomOf="@+id/tv_back_home"
                    tools:text="xiaok123-8898" />

                <TextView
                    android:id="@+id/tv_user_state"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/shape_r8line_white"
                    android:gravity="center"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_ap_name"
                    app:layout_constraintStart_toEndOf="@+id/tv_back_home"
                    app:layout_constraintTop_toTopOf="@+id/tv_back_home"
                    tools:text="在线" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="13dp"
                    android:background="@drawable/dash_line"
                    android:layerType="software"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ap_name" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/tv_root_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:drawableTop="@mipmap/ic_home_sign_user_role"
                    android:drawablePadding="5dp"
                    android:text="@string/iam_bear"
                    android:textColor="@color/text_white_a5"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/tv_invite_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableTop="@mipmap/ic_home_sign_invitefriend"
                    android:drawablePadding="5dp"
                    android:text="@string/invite_member"
                    android:textColor="@color/text_white_a5"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/tv_user_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/role_type"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="1dp"
                    android:text="@string/admin"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/textView11"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/tv_my_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="@mipmap/bg_home_myap"
                    android:gravity="center"
                    android:text="@string/my_k_ap"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toStartOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_root_name" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_parent_control"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_home_sign_parental"
                android:drawablePadding="16dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/parent_control"
                android:textColor="@color/text_deep_black_33"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <TextView
                android:id="@+id/tv_healthy_model"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_home_sign_healthy"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:text="@string/healthy_model"
                android:textColor="@color/text_deep_black_33"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_parent_control"
                app:layout_constraintEnd_toStartOf="@+id/tv_look_week_report"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_parent_control" />

            <TextView
                android:id="@+id/tv_look_week_report"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_home_week_report"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:text="@string/look_week_report"
                android:textColor="@color/text_deep_black_33"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_parent_control"
                app:layout_constraintEnd_toStartOf="@+id/tv_wifi_settings"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_healthy_model" />

            <TextView
                android:id="@+id/tv_wifi_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_home_sign_wifisetting"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:text="@string/wifi_setting"
                android:textColor="@color/text_deep_black_33"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_parent_control"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout2" />
            <!--android:background="@drawable/shape_rectf_shadow"-->
            <LinearLayout
                android:id="@+id/ll_has_no_backup_wrapper"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="4dp"
               android:background="@drawable/bg_home_join_wrapper"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_parent_control">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/ic_found_backup" />

                <TextView
                    android:id="@+id/tv_has_no_backup"
                    style="@style/text_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:text="@string/how_much_picture_backup"
                    android:textSize="11sp"
                    tools:text="您有10张新的照片未备份,是否现在备份?" />

                <TextView
                    android:id="@+id/tv_to_backup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/btn_green_to_cyan14"
                    android:paddingStart="12dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="4dp"
                    android:text="@string/to_back_up"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/education_wrapper"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_has_no_backup_wrapper">

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/conn_device"
                android:textColor="#2B3852"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_has_no_backup_wrapper" />

            <TextView
                android:id="@+id/tv_network_speed"
                style="@style/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/network_speed_now"
                android:textColor="#7383A2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/title_take_care_children"
                android:textColor="#2B3852"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/online_wrapper" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_home_join_wrapper"
                android:minHeight="200dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_children_device"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="100dp"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_look_more_kid"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="23dp"
                    android:background="@drawable/bg_h32_f5_r8"
                    android:gravity="center"
                    android:text="@string/look_all"
                    android:textColor="#7383A2"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_children_device" />
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>