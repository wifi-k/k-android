<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragment.HomeBindFragment">

    <include
        android:id="@+id/include5"
        layout="@layout/common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_has_no_backup_wrapper"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_home_join_wrapper"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_parent_control">

                <TextView
                    android:id="@+id/tv_has_no_backup"
                    style="@style/text_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:text="@string/how_much_picture_backup"
                    android:textSize="13sp"
                    tools:text="您有10张新的照片未备份,是否现在备份?" />

                <TextView
                    android:id="@+id/tv_to_backup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/btn_main_r14"
                    android:paddingStart="12dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="4dp"
                    android:text="@string/to_back_up"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@mipmap/bg_home_bind"
                android:paddingTop="4dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ic_home_sign_default_header"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="0.5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_back_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/come_back_home"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />

                <TextView
                    android:id="@+id/tv_ap_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawablePadding="4dp"
                    android:maxEms="8"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="@+id/tv_back_home"
                    app:layout_constraintTop_toBottomOf="@+id/tv_back_home"
                    tools:text="xiaok123-88982222222222222222222222" />

                <TextView
                    android:id="@+id/tv_user_state"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/shape_r8line_white"
                    android:gravity="center"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_ap_name"
                    app:layout_constraintStart_toEndOf="@+id/tv_back_home"
                    app:layout_constraintTop_toTopOf="@+id/tv_back_home"
                    tools:text="在线" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="13dp"
                    android:background="@drawable/dash_line"
                    android:layerType="software"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ap_name" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white50"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/tv_root_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:drawableTop="@mipmap/ic_home_sign_user_role"
                    android:drawablePadding="5dp"
                    android:text="@string/iam_bear"
                    android:textColor="@color/text_white_a5"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/tv_invite_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableTop="@mipmap/ic_home_sign_invitefriend"
                    android:drawablePadding="5dp"
                    android:text="@string/invite_member"
                    android:textColor="@color/text_white_a5"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/tv_user_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/role_type"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="1dp"
                    android:text="@string/admin"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/textView11"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/tv_my_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="@mipmap/bg_home_myap"
                    android:drawableEnd="@mipmap/ic_line_arrow_right_white"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="10dp"
                    android:text="@string/my_k_ap"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toStartOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_root_name" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/ic_line_arrow_right_white_w10"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_ap_name"
                    app:layout_constraintStart_toEndOf="@+id/tv_ap_name"
                    app:layout_constraintTop_toTopOf="@+id/tv_ap_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_f1f5ff_r8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:src="@mipmap/ic_home_sign_notice"
                    app:layout_constraintBottom_toBottomOf="@+id/marquee_notice"
                    app:layout_constraintTop_toTopOf="@+id/marquee_notice"
                    tools:layout_editor_absoluteX="28dp" />

                <cn.treebear.kwifimanager.widget.marquee.MarqueeTextView
                    android:id="@+id/marquee_notice"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    tools:layout_editor_absoluteY="255dp">

                </cn.treebear.kwifimanager.widget.marquee.MarqueeTextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_parent_control"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_home_sign_parental"
                android:drawablePadding="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/parent_control"
                android:textColor="@color/text_28354C"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <TextView
                android:id="@+id/tv_healthy_model"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_home_sign_healthy"
                android:drawablePadding="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/healthy_model"
                android:textColor="@color/text_28354C"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_parent_control"
                app:layout_constraintEnd_toStartOf="@+id/tv_look_week_report"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_parent_control" />

            <TextView
                android:id="@+id/tv_look_week_report"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_home_week_report"
                android:drawablePadding="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/look_week_report"
                android:textColor="@color/text_28354C"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_parent_control"
                app:layout_constraintEnd_toStartOf="@+id/tv_wifi_settings"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_healthy_model" />

            <TextView
                android:id="@+id/tv_wifi_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_home_sign_wifisetting"
                android:drawablePadding="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/wifi_setting"
                android:textColor="@color/text_28354C"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_parent_control"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout2" />
            <!--android:bg_children_careful="@drawable/shape_rectf_shadow"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="28dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_has_no_backup_wrapper">

                <TextView
                    android:id="@+id/tv_online_device_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/conn_device"
                    android:textColor="@color/text_28354C"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_network_speed"
                    style="@style/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/network_speed_now"
                    android:textColor="#7383A2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/online_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_home_join_wrapper"
                    android:minHeight="100dp"
                    android:padding="8dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_look_more"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="23dp"
                        android:background="@drawable/bg_h32_f5_r8"
                        android:gravity="center"
                        android:text="@string/look_all"
                        android:textColor="@color/text_7383a2"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rv_device_list" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_device_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/no_device_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:src="@mipmap/ic_has_no_device" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/has_no_device"
                        android:textColor="#7383A2"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/tips_has_no_device"
                        android:textColor="#B6C0CB"
                        android:textSize="12sp" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/education_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_take_care_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/title_take_care_children"
                    android:textColor="#2B3852"
                    android:textSize="20sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_online_device_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_home_join_wrapper"
                    android:minHeight="100dp"
                    android:padding="8dp"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_children_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_look_more_kid"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="23dp"
                        android:background="@drawable/bg_h32_f5_r8"
                        android:gravity="center"
                        android:text="@string/look_all"
                        android:textColor="@color/text_7383a2"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rv_children_device" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/no_children_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="36dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:src="@mipmap/has_no_children" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/has_no_week_report"
                        android:textColor="#7383A2"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/tips_has_no_children"
                        android:textColor="#B6C0CB"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>