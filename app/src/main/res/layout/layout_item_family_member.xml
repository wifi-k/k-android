<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_member_header"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="34dp"
            android:src="@mipmap/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_member_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#28354C"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/iv_member_header"
            app:layout_constraintTop_toTopOf="@+id/iv_member_header"
            tools:text="昵称：我是大熊" />

        <TextView
            android:id="@+id/tv_member_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#83889A"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_member_header"
            app:layout_constraintStart_toStartOf="@+id/tv_member_nickname"
            tools:text="手机号：13607748520" />

        <ImageView
            android:id="@+id/iv_member_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_member_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_member_header"
            app:srcCompat="@mipmap/ic_member_delete" />

        <ImageView
            android:id="@+id/iv_member_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_member_delete"
            app:layout_constraintEnd_toStartOf="@+id/iv_member_delete"
            app:layout_constraintTop_toTopOf="@+id/iv_member_delete"
            app:srcCompat="@mipmap/ic_member_edit" />

        <ImageView
            android:id="@+id/iv_member_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_member_edit"
            app:layout_constraintEnd_toStartOf="@+id/iv_member_edit"
            app:layout_constraintTop_toTopOf="@+id/iv_member_edit"
            app:srcCompat="@mipmap/ic_member_admin_no" />
</android.support.constraint.ConstraintLayout>