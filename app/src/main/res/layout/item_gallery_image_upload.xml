<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gallery_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pb_upload_progress"
        style="@style/MyProgressBar"
        tools:progress="20"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/gallery_image"
        app:layout_constraintEnd_toEndOf="@+id/gallery_image"
        app:layout_constraintStart_toStartOf="@+id/gallery_image"
        app:layout_constraintTop_toTopOf="@+id/gallery_image" />

    <TextView
        android:id="@+id/tv_upload_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/waitting"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/pb_upload_progress"
        app:layout_constraintEnd_toEndOf="@+id/pb_upload_progress"
        app:layout_constraintStart_toStartOf="@+id/pb_upload_progress"
        app:layout_constraintTop_toTopOf="@+id/pb_upload_progress" />


</android.support.constraint.ConstraintLayout>