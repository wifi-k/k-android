<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@drawable/shape_white_r8"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_tips_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/ic_test_logo" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:textColor="@color/text_deep_black_33"
        android:textSize="20sp"
        android:typeface="monospace"
        tools:text="请确认是否重启" />

    <TextView
        android:id="@+id/tv_tips_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:textColor="#999999"
        tools:text="路由器重启预计需要几分钟时间，重启 过程中，所有已连设备会断开连接" />

    <LinearLayout
        android:id="@+id/btn_wrapper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_left_lbr8_gray"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/text_deep_black_21" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_right_rbr8_main"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>